{
  // デフォルトのルールをすべて有効にする
  "default": true,

  // 行の長さ制限を有効にする
  "MD013": true,

  // インラインHTMLの使用を禁止する
  "MD033": true,

  // ファイルの先頭に見出しが必要
  "MD041": true,

  // 番号付きリストの番号が連続している必要がある
  "MD029": true,

  // 同じ内容の見出しの重複を禁止する
  "MD024": true,

  // 強調のみの見出しを禁止する
  "MD036": true,

  // 見出しの末尾の句読点を制限する
  "MD026": {
    "punctuation": ".,;:!"
  },

  // コードブロックの前後に空行を要求する
  "MD031": true
}
